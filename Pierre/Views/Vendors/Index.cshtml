@using PierreTracker.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
	<h3>No vendors have been added yet!</h3>
}

@foreach (Vendor vendor in Model)
{
	<h4><a href='/vendors/@vendor.Id'>Visit here for @vendor.VendorName's orders</a></h4>
}

<p><a href='vendors/new'>Click here to add your first vendor!</a></p>
<p><a href='/'>Return to the home page</a></p>