<h1>Add a new order to @Model.VendorName</h1>

<form action="/vendors/@Model.Id/orders" method="post">
	<input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
	<label for="product">Product</label>
	<input id="product" name="product" type="text">
	<label for="productDescription">Product Description</label>
	<input id="productDescription" name="productDescription" type="text">
	<label for="price">Price</label>
	<input id="price" name="price" type="number">
	<label for="date">Date</label>
	<input id="date" name="date" type="text">
	<button type="submit">Add Order</button>
</form>